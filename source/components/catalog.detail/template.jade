      hr.i-size-M.i-line
      
      .b-catalog-detail__sizes
      
        .b-catalog-detail__sizes-row
        
          .b-catalog-detail__sizes-item( data-price="1000 руб." data-discount="500 руб." data-oldprice="1500 руб." data-id="#{id++}" ) XXS
