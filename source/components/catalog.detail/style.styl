@import '../../styl/component-include.styl'

.b-catalog-detail

  &__info
    background-color #f2f2f2
    padding 30px 23px
    color #333
    
    h5
      font-size 7pt
      text-transform uppercase
      color #000
      margin-bottom 5px
      
    .col-xs-3
      color #000
      font-size 11pt
      line-height 22px
      
      sup
        font-size 7pt
      
    hr.i-line
      border-color #dfdfdf
      
    .btn-default
      background-color #9a639a
      color #fff
      font-weight normal
      font-size 9pt
      border none
      
      &.i-disabled
        opacity 0.3
        cursor default
        pointer-events none
    
  &__price
    font-size 21pt
    font-weight bold
    
    &.i-sale
      color #ff3028
    
  &__sizes
  
    &-row
      display flex
      justify-content space-between
      
      .i-2 &,
      .i-3 &
        flex-wrap wrap
        justify-content start
        margin-right -5px
      
    &-item
      border 1px solid #dfdfdf
      font-size 8pt
      text-align center
      margin-bottom 8px
      padding 4px 0
      line-height 12px
      cursor pointer
      user-select none
      
      .i-1 &
        width calc( 10% - 5px )
      
      .i-2 &
        width calc( 20% - 5px )
        margin-right 5px
      
      .i-3 &
        width calc( 16.6% - 5px )
        line-height 32px
        margin-right 5px
      
      &.i-disabled
        cursor default
        color #cbcbcb
        pointer-events none
      
      &.i-active
        color #9a639a
        border 2px solid #9a639a
        padding 3px 0
        
  &__order
    font-size 11pt
    margin-top 23px
    display none
    
    &-num
      font-weight bold
      
.collapsing-block .h3:first-child
  font-size: 14px
  cursor: pointer
  padding-top: 15px
  padding-bottom: 15px
  margin-top: 0
  margin-bottom: 0
  -webkit-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none
  position: relative

.collapsing-content
  overflow: hidden
  max-height: 1000px
  transition( all 0.3s ease-in)

.collapsing-content .inner
  padding-bottom: 20px

.collapsing-content .inner::after
  clear: both
  content: ""
  display: table

.collapsing-block
  border-bottom: 1px #cbcbcb solid

.collapsing-block:first-child
  border-top: 1px #cbcbcb solid

.collapsing-block .h3:first-child:before
  content: ''
  position: absolute
  width: 12px
  height: 7px
  background-image: url("data:image/png;base64,")
  background-position: center center
  background-repeat: no-repeat
  top: 19px
  right: 10px
  transition( all 0.5s ease)
  transform( rotate(180deg))
  border-radius: 50%

.collapsing-block.closed .collapsing-content
  max-height: 0
  -webkit-transition: all 0.4s ease-out
  -moz-transition: all 0.4s ease-out
  transition: all 0.4s ease-out

.collapsing-block.closed .h3:first-child:before
  transform( rotate(0))
  
.item-feedback
    border: 1px solid #006EB9
    text-align: center
    padding: 20px 80px


