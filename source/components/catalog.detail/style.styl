	margin-top: 0;
	margin-bottom: 0;
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
	position: relative
}

.collapsing-content {
	overflow: hidden;
	max-height: 1000px;
	transition: all .3s ease-in;
	-webkit-transition: all .3s ease-in;
	-moz-transition: all .3s ease-in;
	-ms-transition: all .3s ease-in
}

.collapsing-content .inner {
	padding-bottom: 20px
}

.collapsing-content .inner::after {
	clear: both;
	content: "";
	display: table
}

.collapsing-block {
	border-bottom: 1px #cbcbcb solid
}

.collapsing-block:first-child {
	border-top: 1px #cbcbcb solid
}

.collapsing-block .h3:first-child:before {
	content: '';
	position: absolute;
	width: 12px;
	height: 7px;
	background-image: url("data:image/png;base64,");
	background-position: center center;
	background-repeat: no-repeat;
	top: 19px;
	right: 10px;
	transition: all .5s ease;
	-webkit-transition: all .5s ease;
	-moz-transition: all .5s ease;
	-ms-transition: all .5s ease;
	transform: rotate(180deg);
	-webkit-transform: rotate(180deg);
	-moz-transform: rotate(180deg);
	-ms-transform: rotate(180deg);
	-webkit-border-radius: 50%;
	-moz-border-radius: 50%;
	border-radius: 50%
}

.collapsing-block.closed .collapsing-content {
	max-height: 0;
	-webkit-transition: all .4s ease-out;
	-moz-transition: all .4s ease-out;
	transition: all;
	-webkit-transition: all;
	-moz-transition: all;
	-ms-transition: all
}

.collapsing-block.closed .h3:first-child:before {
	transform: rotate(0);
	-webkit-transform: rotate(0);
	-moz-transform: rotate(0);
	-ms-transform: rotate(0)
}

