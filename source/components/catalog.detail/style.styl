@import '../../styl/component-include.styl'

.b-catalog-detail

  &__info
    background-color #f2f2f2
    padding 30px 23px
    color #333
    
    h5
      font-size 7pt
      text-transform uppercase
      color #000
      margin-bottom 5px
      
    .col-xs-3
      color #000
      font-size 11pt
      line-height 22px
      
      sup
        font-size 7pt
      
    hr.i-line
      border-color #dfdfdf
      
    .btn-default
      background-color #9a639a
      color #fff
      font-weight normal
      font-size 9pt
      border none
      
      &.i-disabled
        opacity 0.3
        cursor pointer
        pointer-events none
    
  &__price
    font-size 21pt
    font-weight bold
    
    &.i-sale
      color #ff3028
    
  &__sizes
  
    &-row
      display flex
      justify-content space-between
      
      .i-2 &
        flex-wrap wrap
        justify-content start
        margin-right -5px
      
    &-item
      border 1px solid #dfdfdf
      font-size 8pt
      text-align center
      margin-bottom 8px
      padding 4px 0
      line-height 12px
      cursor pointer
      user-select none
      
      .i-1 &
        width calc( 10% - 5px )
      
      .i-2 &
        width calc( 20% - 5px )
        margin-right 5px
      
      .i-3 &
        width calc( 16.5% - 5px )
        line-height 32px
      
      &.i-disabled
        cursor default
        color #cbcbcb
      
      &.i-active
        color #9a639a
        border 2px solid #9a639a
        padding 3px 0
        
  &__order
    font-size 11pt
    margin-top 23px
    display none
    
    &-num
      font-weight bold