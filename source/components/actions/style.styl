@import '../../styl/component-include.styl'

.b-actions

  &__banner
    
    a
      display block
      height 375px
      
  &-item
    display block
    background-color transparent !important
    color #2f3154
    height auto !important
  
    &__img
      position relative
      background-color #f2f2f2
      opacity( 1 !important )
      transition( opacity .5s ease )
    
      a
        display block
        padding-top 134%
        position relative
        
        &:hover
          opacity 1
          
          span
            
            &:first-child
              opacity 0
        
        span
          display block
          position absolute
          top 0
          left 0
          width 100%
          height 100%
          background-repeat no-repeat
          background-position center
          background-size contain
          
          &:first-child
            z-index 2
            transition( opacity .5s ease )
          
          &:last-child
            z-index 1
            
    &__label
      opacity( 1 !important )
      transition( opacity .5s ease )
      display block
      position absolute
      bottom 12px
      left 12px
      line-height 25px
      border-radius 13px
      color #fff
      font-size .8rem
      padding 0 15px
      z-index 3
      
    &__props-icons
      position absolute
      top 10px
      left 10px
      z-index 5
            
    &__title
      opacity( 1 !important )
      transition( opacity .5s ease )
    
      a
        display inline-block !important
        line-height 1.2
            
    &__brand
      opacity( 1 !important )
      transition( opacity .5s ease )
      font-size .9rem
      
    &__price
      font-weight bold
      font-size .9rem
      display inline-block
      vertical-align top
      margin-right 10px
      opacity( 1 !important )
      transition( opacity .5s ease )
      
    &__amount
      font-size .9rem
      display inline-block
      vertical-align top
      opacity( 1 !important )
      transition( opacity .5s ease )
      
.b-prop
  background-color #fff
  line-height 20px
  height 20px
  padding 0 5px
  font-size 7pt
  text-transform uppercase
  margin 0 3px 3px 0
  display inline-block
  border-width 1px
  border-style solid
  
  @media( max-width 767px )
    margin 0 4px 3px
      
.bj-sorting
  font-size .85rem
  
  .text-muted
    float left
    margin-right 15px
    
  .dropdown
    float left
    
    a:hover
      text-decoration none
      
    .caret
      margin-left 5px
    
  &:after
    content ''
    display block
    clear both
    
  .dropdown-menu
    border none
    font-size .85rem
    left -20px
    min-width calc(100% + 20px)
    
    >li>a:focus,
    >li>a:hover
      background #f5f5f5